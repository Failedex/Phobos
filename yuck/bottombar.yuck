
(defwindow bottombar 
  :geometry (geometry 
              :x 0
              :y 0
              :width "100%"
              :height 0
              :anchor "bottom center")
  :stacking "bottom"
  :exclusive true 
  :monitor '["eDP-1", "<primary>", 0]'
  :wm-ignore false
  (bottombarstruct))

(defwidget bottombarstruct [] 
  (revealer
    :reveal {revealbar == 1}
    :transition "slideup"
    (box 
      :orientation "h"
      :space-evenly false 
      :height 70
      (bottomleftstruct)
      (box 
        :class "window"
        :style "margin-top: 20px;"
        :hexpand true)
      (bottomrightstruct))))

(defwidget bottomrightstruct [] 
  (box 
    :orientation "h"
    :space-evenly false 
    :vexpand true 
    (box 
      :orientation "v"
      :space-evenly false 
      (box 
        :class "triangle bottomright")
      (box 
        :class "window"
        :vexpand true))
    (box 
      :class "window bar"
      :hexpand true
      :width 404
      (box
        :orientation "h"
        :halign "center"
        :hexpand false
        :height 70
        :space-evenly false
        :spacing 20
        (revealer
          :reveal {!revealtasklistint}
          :transition "slideleft"
          (button
            :onclick "./scripts/hackslide.sh systemint &"
            (box 
              :orientation "h"
              :space-evenly false
              :spacing 10
              (image 
                :image-width 35
                :path "./assets/icons/hamburg.svg")
              (label
                :class "large"
                :text "System"))))
        (revealer
          :reveal {!revealsystemint}
          :transition "slideright"
          (button
            :onclick "./scripts/hackslide.sh tasklistint &"
            (box 
              :orientation "h"
              :space-evenly false
              :spacing 10
              (image 
                :image-width 35
                :path "./assets/icons/file.svg")
              (label
                :class "large"
                :text "Navigation"))))))))

(defwidget bottomleftstruct [] 
  (box
    :orientation "h"
    :space-evenly false
    :vexpand true
    (box 
      :class "window bar"
      :orientation "h"
      :space-evenly false
      (box 
        :orientation "h"
        :space-evenly false
        (button
          :style "margin-right: 10px;"
          :onclick "./scripts/hackslide.sh launcherint &"
          (image 
            :image-width 35
            :path "./assets/icons/search.svg"))
        (revealer 
          :reveal reveallauncherint
          :transition "slideleft"
          (input
            :onchange "./scripts/apps.py --query '{}'"
            :onaccept "(cd && ${appsjson.apps[0].desktop}) & ./scripts/hackslide.sh launcherint &"
            :width 300)) 
        (revealer
          :reveal {!reveallauncherint}
          :halign "start"
          :transition "slideright"
          (button
            :onclick "./scripts/hackslide.sh launcherint &"
            (label
              :class "large"
              :text "Search")))))
              
    (box 
      :orientation "v"
      :space-evenly false 
      (box 
        :class "triangle bottomleft")
      (box 
        :class "window"
        :vexpand true))))
